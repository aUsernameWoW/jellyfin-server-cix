# Jellyfin default configuration for CIX
# This is the configuration file for the jellyfin service

# Directory where program data is stored
JELLYFIN_DATA_DIR="/var/lib/jellyfin"

# Directory where configuration is stored
JELLYFIN_CONFIG_DIR="/etc/jellyfin"

# Directory where logs are stored
JELLYFIN_LOG_DIR="/var/log/jellyfin"

# Directory where cache is stored
JELLYFIN_CACHE_DIR="/var/cache/jellyfin"

# Web directory for jellyfin-web-cix
JELLYFIN_WEB_DIR="/usr/share/jellyfin/web"

# FFmpeg location (use ffmpeg-cix for V4L2M2M hardware acceleration)
JELLYFIN_FFMPEG_PATH="/usr/lib/jellyfin-ffmpeg/ffmpeg"

# User to run the service as
JELLYFIN_USER="jellyfin"

# Additional options
JELLYFIN_ADDITIONAL_OPTS=""

# Combine all options
JELLYFIN_ARGS="--datadir=${JELLYFIN_DATA_DIR} --configdir=${JELLYFIN_CONFIG_DIR} --logdir=${JELLYFIN_LOG_DIR} --cachedir=${JELLYFIN_CACHE_DIR} --webdir=${JELLYFIN_WEB_DIR} --ffmpeg=${JELLYFIN_FFMPEG_PATH} ${JELLYFIN_ADDITIONAL_OPTS}"
